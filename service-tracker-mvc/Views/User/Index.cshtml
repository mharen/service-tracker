@model IEnumerable<service_tracker_mvc.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="data-table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Email
        </th>
        <th>
            Role
        </th>
        <th>
            First Login (UTC)
        </th>
        <th>
            Last Login (UTC)
        </th>
        <th>
            Login Count
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td title="@Html.AttributeEncode(item.ClaimedIdentifier)">
            @item.ClaimedIdentifier.Left(15)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @((service_tracker_mvc.Models.RoleType)item.RoleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstLogin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastLogin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoginCount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserId }) 
        </td>
    </tr>
}

</table>
