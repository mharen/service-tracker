@model service_tracker_mvc.Models.Invoice
@{
    Layout = "~/Views/Shared/_LayoutEditor.cshtml";
    ViewBag.Title = "New Invoice";
    ViewBag.IsNewInvoice = true;
}
@section Actions{
    <input type="submit" name="Save" value="Save and Add Another" />        
    <input type="submit" name="Save" value="Save" />
    @switch (Request["from"])
    {
        case "details":
        @Html.ActionLink("Cancel", "Details", new { Id = Model.InvoiceId })
   break;

        default:   
        @Html.ActionLink("Cancel", "Index")
   break;
    }
}
<script>$(function(){ $('#ServiceDate').focus(); });</script>