@model IEnumerable<service_tracker_mvc.Models.Organization>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="data-table ui-widget">
    <tr>
        <th class='ui-state-default'>
            Name
        </th>
        <th class='ui-state-default'>
            Code
        </th>
        <th class='ui-state-default'>
            Vendor Number
        </th>
        <th class='ui-state-default'></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class='ui-widget-content'>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class='ui-widget-content'>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td class='ui-widget-content'>
            @Html.DisplayFor(modelItem => item.VendorNumber)
        </td>
        <td class='ui-widget-content number'>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrganizationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.OrganizationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrganizationId })
        </td>
    </tr>
}

</table>
