@model DateTime?
@if (Model.HasValue)
{
    var value = Model.Value;
    if (value == value.Date)
    {
        <time datetime='@Model.Value.ToString(@"yyyy-MM-ddTHH\:mm\:ss.fffffffZ")'>@value.ToShortDateString()</time>    
    }
    else
    { 
        @Script.AddJavaScript("~/Scripts/jquery.timeago.js")
        <time class='timeago' datetime='@value.ToString(@"yyyy-MM-ddTHH\:mm\:ss.fffffffZ")'>@value.ToString(@"yyyy-MM-dd HH\:mm\:ssZ")</time>
    }
}