    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
    <script src="@Url.VersionedContent("~/Scripts/libs/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.VersionedContent("~/Scripts/plugins.js")" type="text/javascript"></script>
    <script src="@Url.VersionedContent("~/Scripts/script.js")" type="text/javascript"></script>
