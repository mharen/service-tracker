@if(Request.IsAuthenticated) {
    <text>Welcome <strong title="@Html.AttributeEncode(HttpContext.Current.CurrentUser().Role.ToString())">@HttpContext.Current.CurrentUser().Name</strong> | @Html.ActionLink("Logout", "Logout", "User")</text>
}
else { 
    @Html.ActionLink("Login", "Login", "User")
}
